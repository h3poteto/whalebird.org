<div class="main-board">
  <div class="main-title">
    <h1><%= t(".title") %></h1>
    <%= link_to image_tag("ios/App_Store_Badge.svg", class: "app-store-badge"), "https://itunes.apple.com/jp/app/id955717062", target: "_blank" %>
  </div>
</div>
<div class="main-area">
  <div class="app-description">
    <div class="description">
      <h3><%= t(".description") %></h3>
      <%= image_tag("ios/screenshot/detail.png", class: "screenshot") %>
      <%= image_tag("ios/screenshot/profile.png", class: "screenshot") %>
      <%= image_tag("ios/screenshot/settings.png", class: "screenshot") %>
    </div>
  </div>
  <div class="app-description">
    <div class="description gray-back">
      <h3><%= t(".feature") %></h3>
      <div class="function">
        <p><i class="fab fa-twitter"></i></p>
        <h4><%= t(".userstream") %></h4>
      </div>
      <div class="function">
        <p><i class="fas fa-bell"></i></p>
        <h4><%= t(".push_notification") %></h4>
      </div>
      <div class="function">
        <p><i class="fas fa-comments"></i></p>
        <h4><%= t(".direct_message") %></h4>
      </div>
    </div>
  </div>
  <div class="app-description">
    <div class="description">
      <h3><%= t(".swipe.title") %></h3>
      <p><%= t(".swipe.description") %></p>
      <%= image_tag("ios/screenshot/list.png", class: "screenshot") %>
      <%= image_tag("ios/screenshot/list1.png", class: "screenshot") %>
      <%= image_tag("ios/screenshot/list2.png", class: "screenshot") %>
    </div>
  </div>
</div>
